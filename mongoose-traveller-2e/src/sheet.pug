mixin roll(title, short, attr, extra="", rest="")
  button(
    type="roll"
    class="roll"
    name=short
    value=`&{template:rolls} {{title=${title}}} {{character_name=@{character_name}}} {{roll=[[?{Roll|Normal, 2d6|Boon, 3d6kh2|Bane, 3d6kl2}+@{${attr}}${extra}+?{DM|0}]]}} ${rest}`
  )


include pug/character.pug


script(type="text/worker")
  include js/worker.js

include pug/roll-template.html
